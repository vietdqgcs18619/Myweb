<!DOCTYPE html>
<html lang="en">
<!-----------------------------Header---------------------------------->
<head>
  <%- include('partials/headertest') -%>
  <title>Page Payment</title>
</head>

<!-----------------------------Body---------------------------------->
<body>
  <!-------------------------Menu------------------------------------>
  <%- include('partials/menu') -%>

  <div class="row">
    <%- include('partials/row-left') -%>

    <div class="main">
      <h2>Payment</h2>
      <div class="row">
        <table width = "100%">
          <form action="/insert">
        <% for (var i = 0; i < productlist.length; i++) { %>
                <tr style="border-width: 5px;border-color: rgb(33, 158, 81);padding-bottom: 15px;">
                    <td>
                        <img width="50px" height="50px" src="<%= productlist[i].Img%>">
                    </td>
                    <td > 
                        <P><%= productlist[i].Name %></P>
                        <p><b>Price: </b> <%= productlist[i].Price%></p>								
                        <p><b>Num.: </b> <%= productlist[i].Num%> </p>
                    </td>
                </tr>
        <% } %>
        </table>
        <button type="submit" >Payment</button>
      </form>
        </div>
      
      
      
    </div>
    
  </div>

  <!------------------------------------Footer----------------------------------------->
  <footer>
    <%- include('partials/footer') -%>
  </footer>


</body>
</html>